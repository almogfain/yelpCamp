<% include ../partials/header  %>

<div class=container>
    <div class="row">
        <h1>Edit a comment</h1>
         <div class="input-div">
            <form action="/campgrounds/<%= campId %>/comments/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" placeholder="Comment" type="text" name="ucomment[text]" value=<%= comment.text %>>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block" type="submit">Save comment</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer  %>