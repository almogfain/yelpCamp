<% include ../partials/header  %>

<div class=container>
    <div class="row">
        <h1>Create new camp!</h1>
        <div class="input-div">
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input class="form-control" placeholder="Camp name" type="text" name="camp">
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Price per night" type="number" step="0.01" min="0.0" name="price">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image url" name="imgUrl">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" placeholder="Description" name="desc">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block" type="submit">Add new camp!</button>
                </div>
            </form>
        </div>        
    </div>
</div>
<% include ../partials/footer  %>